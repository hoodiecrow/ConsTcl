MD(
B{skip-ws} procedure

K{skip-ws} skips whitespace and comments (the K{;} to end of line kind). Uses the
shared E{c} variable. It leaves the first character not to be skipped in E{c}.
MD)

PR(
skip-ws (internal);-> none
PR)

IX skip-ws
CB(
proc ::constcl::skip-ws {} {
  upvar c c unget unget
  while true {
    switch -regexp $c {
      {[[:space:]]} {
        set c [readc]
      }
      {;} {
        while {$c ne "\n" && $c ne "#EOF"}  {
          set c [readc]
        }
      }
      default {
        set unget $c
        return
      }
    }
  }
}
CB)


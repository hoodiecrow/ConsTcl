# 4
TT)

MD(
B{read-end} procedure

K{read-end} reads one character and returns 1 if it is an interspace character or
an ending parenthesis or bracket, or end of file. Otherwise it returns 0. It
ungets the character before returning.
MD)

PR(
read-end (internal);-> tbooleof
PR)

IX read-end
CB(
proc ::constcl::read-end {} {
  upvar c c unget unget
  set c [readc]
  if {[interspace $c] ne "#f" || $c in {) ]} || $c eq "#EOF"} {
    set unget $c
    return 1
  } else {
    set unget $c
    return 0
  }
}
CB)

